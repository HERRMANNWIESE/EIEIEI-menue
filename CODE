#include <Adafruit_SSD1306.h>
#include <Adafruit_GFX.h>

#define OLED_RESET     -1 // Reset pin # (or -1 if sharing Arduino reset pin)
#define OLED_SDA A4
#define OLED_SCL A5
#define SCREEN_WIDTH 128 // OLED display Breite, in pixels
#define SCREEN_HEIGHT 64 // OLED display HÃ¶he, in pixels
Adafruit_SSD1306 display(SCREEN_WIDTH, SCREEN_HEIGHT, &Wire, OLED_RESET);

int i = 0;
int x = 0;
int button = 2;
int buttonslect = 3;
int pos = 0;
int posf = 0;
boolean state = true;
boolean buttonval = false;
boolean state2 = true;
boolean buttonval2 = false;
int c1 = WHITE;
int c0 = BLACK;
int color1;
int color2;
int upnubre = 0;

void gameone();
void gametwo();
void upset();

void setup() {
  pinMode(button, INPUT);
  pinMode(buttonslect, INPUT);

  upnubre = 1;

 Serial.begin(115200);
  display.begin(SSD1306_SWITCHCAPVCC, 0x3C); // I2C address = 0x3C
  delay(1000);
  display.clearDisplay();
  
  
}

void loop(){
  if(upnubre == 1){
    upset();
  }
  else if(upnubre == 2){
    gameone();
  }
  else if(upnubre == 3){
    gametwo();
  }

}

void upset() {
  display.clearDisplay();
  int buttonstate = digitalRead(button);
  int buttonstateslct = digitalRead(buttonslect);

  if(buttonstate == 1){
    if(state == true){
      if(buttonval == true){
        buttonval = false;
      }
      else{
        buttonval = true;
      }
      state = false;
    }
  }
  else{
    state = true;
  }

  if(buttonstateslct == 1){
    if(state2 == true){
      buttonval2 = true;
      state2 = false;
    }
  }
  else{
    state2 = true;
    buttonval2 = false;
  }



  if(buttonval == false){
    pos = 5;
    posf = 27;
    color1 = c0;
    color2 = c1;
  }
  else{
    pos = 27;
    posf = 5;
    color2 = c0;
    color1 = c1;
  }
  display.drawRect(5, posf, 118, 20, c1);
  display.fillRect(5, pos, 118, 20, c1);

  display.setTextSize(2);
  display.setTextColor(color1);
  display.setCursor(10, 8);
  display.print("GAME1"); //NAME OF GAME 1

  display.setTextSize(2);
  display.setTextColor(color2);
  display.setCursor(10, 30);
  display.print("GAME2"); //NAME OF GAME 2

  display.display();

  if(buttonval2 == true && buttonval == false){
    display.clearDisplay();
    display.display();
    upnubre = 2;
    //gameone();
    
  }
  if(buttonval2 == true && buttonval == true){
    display.clearDisplay();
    display.display();
    upnubre = 3;
    //gameone();
    
  }


  
  }

void gameone() {

  display.setTextSize(2);
  display.setTextColor(WHITE);
  display.setCursor(10, 10);
  display.print("GAME1");

  display.display();

}

void gametwo() {

  display.setTextSize(2);
  display.setTextColor(WHITE);
  display.setCursor(10, 10);
  display.print("GAME2");

  display.display();

}
